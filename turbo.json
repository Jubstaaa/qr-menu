{
  "$schema": "https://turborepo.org/schema.json",
  "globalPassThroughEnv": ["MFE_DEBUG"],
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV",
        "SUPABASE_URL",
        "SUPABASE_HOSTNAME",
        "SUPABASE_SERVICE_ROLE_KEY",
        "BASE_DOMAIN"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  }
}
